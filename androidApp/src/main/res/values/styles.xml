<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TwittaSave.Toolbar" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.DayNight</item>
    </style>

    <style name="TwittaSave.HeaderOne" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:textColor">@color/colorHeaderOne</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TwittaSave.HeaderTwo" parent="TwittaSave.HeaderOne">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:textColor">@color/colorHeaderTwo</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TwittaSave.Body" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:textColor">@color/colorBody</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
